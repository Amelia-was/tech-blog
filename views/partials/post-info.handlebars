<article class="post">
    <div class="post-title">
        <a href="/post/{{id}}" target="_blank" class="title-link">{{title}}</a>
    </div>
    <div class="post-body">
        <p class="post-text">{{text}}</p>
        <div class="meta">
            By {{user.username}} | {{format_date created_at}} |
            <a href="/post/{{id}}" class="comment-link">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</article>