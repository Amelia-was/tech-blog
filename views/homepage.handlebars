<ol class="post-list">
    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_url}}" target="_blank">{{title}}</a>
                <p>({{text}})</p>
            </div>
            <div class="meta">
                By {{user.username}} | {{created_at}}
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>